 #include <iostream>
 using namespace std;
 int main()
 {
   int num, contador=0, par=0, impar=0;
   cout <<"Qual o valor para início? ";
   cin >>num;
   for (contador=1;contador<=num;contador++)
   {
        if(contador%2==0)
        {par++;
		}
		else
		{impar++;
		}
  }
  cout<<"número de pares é "<<par<<" números de ímpares é "<<impar;
 }
