#include <iostream>
#include <locale>
#include <stdlib.h>
using namespace std;
int main()
{
setlocale(LC_ALL, "ptb");
int peso, idade, contador=0,pesoacumulado=0,idadeacumulada=0;
cout<< "qual o peso? ";
cin>>peso;
while (peso!=0)
{
pesoacumulado+=peso;
cout<<"qual a idade? ";
cin>>idade;
idadeacumulada+=idade;
contador++;
cout<< "qual o peso? ";
cin>>peso;
}
cout<<"o peso médio é "<<pesoacumulado/contador<<"\n";
cout<<"a idade média é "<<idadeacumulada/contador<<"\n";
}
